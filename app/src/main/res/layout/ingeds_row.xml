<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/sevendp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageIngred"
        android:layout_width="@dimen/eightfivedp"
        android:layout_height="@dimen/eightfivedp"

        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textIngred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageIngred"
        android:layout_gravity="center"
        android:text="@string/ingredient"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/mesureIngred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textIngred"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/mesure"
        android:textColor="@color/colorAccent"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twofivedp" />
</RelativeLayout>